<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <com.example.administrator.choshibaike.scandal.view.myview.MyImagView
            app:shape="cirle"
            android:layout_width="48dp"
            android:id="@+id/f0lviv"
            android:scaleType="centerCrop"
            android:padding="4dp"
            android:layout_height="48dp" />
        <TextView android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/f0lviv"
            android:textStyle="bold"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:id="@+id/hot"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_height="match_parent" />
        <ImageView android:layout_width="48dp"
            android:id="@+id/f0lviv1"
            android:layout_toLeftOf="@id/hot"
            android:layout_height="48dp" />
    </RelativeLayout>
     <TextView
        android:layout_width="match_parent"
        android:id="@+id/content"
        android:textSize="18sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginLeft="58dp"
        android:id="@+id/imgll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <SurfaceView
                android:id="@+id/surface_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center" />
            <ImageView android:id="@+id/imgv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
        <TextView android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/count"
        android:layout_height="wrap_content" />

     <LinearLayout
    android:layout_width="match_parent"
         android:orientation="horizontal"
         android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:src="@drawable/good"
        android:layout_gravity="center"
        android:id="@+id/iv1"
        android:layout_height="48dp" />
    <ImageView
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:id="@+id/iv2"
        android:src="@drawable/nogood"
        android:layout_weight="1"
        android:layout_height="48dp" />
    <ImageView
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:id="@+id/iv3"
        android:src="@drawable/night"
        android:layout_weight="1"
        android:layout_height="48dp" />
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="48dp" />
    <ImageView android:layout_width="0dp"
        android:id="@+id/iv4"
        android:src="@drawable/share_more"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="48dp" />
</LinearLayout>

</LinearLayout>